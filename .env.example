DATA_DIR=/var/lib/vm-provisioner
DB_PATH=/var/lib/vm-provisioner/vms.db
LIBVIRT_URI=qemu:///system
START_PORT=2222
END_PORT=2322
VM_NETWORK=default

# Server public IP (used in SSH connection commands shown to users)
