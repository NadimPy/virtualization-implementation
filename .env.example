SERVER_PUBLIC_IP=

# VM ressource
MIN_MEMORY_MB= 512
MAX_MEMORY_MB= 4096

MIN_VCPUS=1
MAX_VCPUS=2

DEFAULT_MEMORY_MB=512
DEFAULT_VCPUS=1
DEFAULT_DISK_GB=10